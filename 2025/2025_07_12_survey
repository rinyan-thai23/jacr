    <script>
        // Chart.js script to render the pie chart
        document.addEventListener('DOMContentLoaded', () => {
            const ctx = document.getElementById('responseChart').getContext('2d');
            const responseChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: ['特定の会員への対応を求める', '会の活動を停止する', '現運営陣の責任を問う'],
                    datasets: [{
                        label: '回答の割合',
                        data: [89.5, 7.9, 2.6],
                        backgroundColor: ['#36A2EB', '#FFCE56', '#FF6384'],
                        borderColor: '#ffffff',
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.label || '';
                                    if (label) { label += ': '; }
                                    if (context.parsed !== null) { label += context.parsed.toFixed(1) + '%'; }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });

            // Script for the toggle functionality
            const toggleButton = document.getElementById('toggleButton');
            const toggleContent = document.getElementById('toggleContent');
            const toggleIcon = document.getElementById('toggleIcon');

            toggleButton.addEventListener('click', () => {
                const isClosed = toggleContent.style.maxHeight === '0px' || toggleContent.style.maxHeight === '';
                if (isClosed) {
                    // Open the toggle
                    toggleContent.style.maxHeight = toggleContent.scrollHeight + 'px';
                    toggleContent.style.opacity = '1';
                    toggleIcon.classList.add('rotate-180');
                } else {
                    // Close the toggle
                    toggleContent.style.maxHeight = '0px';
                    toggleContent.style.opacity = '0';
                    toggleIcon.classList.remove('rotate-180');
                }
            });
        });
    </script>

